<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info_biaya"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.beranda.content.InfoBiaya">

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/info_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/info_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txtError"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/infobiaya9" />

        <ImageView
            android:layout_width="100dp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_logo_slogan"
            android:layout_height="100dp" />

    </RelativeLayout>

</RelativeLayout>
