<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mutasi_pembiayaan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tgl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="00/00/0000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_debit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/bg_outline"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="DEBIT"
                android:textColor="@color/red"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_kredit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/bg_solid"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="KREDIT"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_faktur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="FAKTUR"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:text="Rp000.000.000"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_show"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageButton
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_hide"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_ket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="12dp" />

            <TableLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:stretchColumns="2">

                <TableRow android:background="@drawable/border_title">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_title"
                        android:gravity="center"

                        android:padding="4dp"
                        android:text="POKOK"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_title"
                        android:gravity="center"

                        android:padding="4dp"
                        android:text="MARGIN"
                        android:textSize="12dp" />

                    <!-- <TextView
                         android:layout_width="0dp"
                         android:textSize="12dp"
                         android:layout_weight="1"
                         android:gravity="center"

                         android:background="@drawable/border"
                         android:padding="4dp"
                         android:text="DENDA" />-->
                </TableRow>

            </TableLayout>

            <TableLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:stretchColumns="2">

                <TableRow android:background="@drawable/border">

                    <TextView
                        android:id="@+id/tv_pokok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:paddingRight="8dp"
                        android:text="Rp. 000.000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_margin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:paddingRight="8dp"
                        android:text="Rp. 000.000"
                        android:textSize="12dp" />

                    <!--  <TextView
                          android:id="@+id/tv_denda"
                          android:padding="4dp"
                          android:paddingEnd="8dp"
                          android:paddingRight="8dp"
                          android:layout_width="0dp"
                          android:background="@drawable/border"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:gravity="end"
                          android:text="Rp. 000.000"
                          android:textSize="12dp" />-->

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>