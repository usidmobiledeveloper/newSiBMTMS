<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_plnpra_sukses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.transaksi.pembelian.PLNpembelianSukses">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/plnpra"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/ijotuakop1"
        android:textStyle="bold"/>

    <!--<TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJudul"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/app_name"
        android:textColor="@color/red"
        android:textSize="@dimen/text_14"/>-->

    <ScrollView
        android:id="@+id/Scr"
        android:layout_width="match_parent"
        android:layout_below="@id/tvJudul"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnOK">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.usid.mobilebmt.mandirisejahtera.dashboard.riwayat.ZigZag
                android:id="@+id/zv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:zigzagHeight="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/ll_mid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:alpha="0.1"
                                    android:src="@drawable/ic_logo_toolbar" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/ll_ppob"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/bg_outline"
                                            android:gravity="center_vertical"
                                            android:padding="8dp">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_title_ppob" />

                                            <TextView
                                                android:id="@+id/tv_ppob"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="Pembelian"
                                                android:textAllCaps="true"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="end">

                                            <ImageView
                                                android:layout_width="42dp"
                                                android:layout_height="42dp"
                                                app:srcCompat="@drawable/ic_logo_toolbar" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp"
                                        android:background="@drawable/line"
                                        android:layerType="software" />

                                    <TextView
                                        android:id="@+id/tv_judul"
                                        android:visibility="gone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:gravity="center"
                                        android:text="Judul"
                                        android:textColor="#000"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:id="@+id/tvInfo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:gravity="center"
                                        android:text="Judul"
                                        android:textColor="#FF0000"
                                        android:textSize="16dp" />

                                    <LinearLayout
                                        android:id="@+id/mKontenStruk"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="42dp"
                                        android:orientation="vertical" />

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ll_end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_repeat"
                        android:orientation="vertical" />

                </LinearLayout>

            </com.usid.mobilebmt.mandirisejahtera.dashboard.riwayat.ZigZag>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnOK"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button_small"
        android:gravity="center"
        android:text="@string/oke"
        android:textColor="@android:color/white"/>
</RelativeLayout>
