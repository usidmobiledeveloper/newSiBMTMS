<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dashboard.riwayat.RiwayatViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.usid.mobilebmt.mandirisejahtera.dashboard.riwayat.ZigZag
                android:id="@+id/zv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:zigzagHeight="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/ll_mid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:alpha="0.1"
                                    app:srcCompat="@drawable/ic_logo_toolbar" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/ll_trf"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/bg_solid"
                                            android:gravity="center_vertical"
                                            android:padding="8dp">

                                             <ImageView
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:srcCompat="@drawable/ic_title_trf" />
                                            <TextView
                                                android:id="@+id/tv_transfer"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="TRANSFER"
                                                android:textColor="@color/white"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_donasi"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/bg_solid"
                                            android:gravity="center_vertical"
                                            android:padding="8dp">

                                             <ImageView
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:srcCompat="@drawable/ic_title_donasi" />
                                            <TextView
                                                android:id="@+id/tv_donasi"
                                                android:layout_width="match_parent"
                                                android:layout_height="10dp"
                                                android:gravity="center"
                                                android:text="DONASI"
                                                android:textColor="@color/white"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_ppob"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/bg_outline"
                                            android:gravity="center_vertical"
                                            android:padding="8dp">

                                             <ImageView
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:srcCompat="@drawable/ic_title_ppob" />
                                            <TextView
                                                android:id="@+id/tv_ppob"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="PPOB"
                                                android:textAllCaps="true"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="12sp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="end">

                                            <ImageView
                                                android:layout_width="42dp"
                                                android:layout_height="42dp"
                                                app:srcCompat="@drawable/ic_logo_toolbar" />
                                        </LinearLayout>


                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/line"
                                        android:layerType="software" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="4dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_judul"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="-"
                                            android:textColor="#000"
                                            android:textSize="18dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/lb_detail"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:text="Detail"
                                            android:textColor="#000"
                                            android:textSize="16dp"
                                            android:textStyle="bold" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp">

                                            <TextView
                                                android:id="@+id/lb_faktur"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="8"
                                                android:text="Faktur"
                                                android:textColor="#000"
                                                android:textSize="14dp" />

                                            <TextView
                                                android:id="@+id/lb_titik2a"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="8dp"
                                                android:layout_marginEnd="8dp"
                                                android:layout_weight="1"
                                                android:text=":" />

                                            <TextView
                                                android:id="@+id/tv_faktur"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="20"
                                                android:text="-"
                                                android:textColor="#000"
                                                android:textSize="14dp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp">

                                            <TextView
                                                android:id="@+id/lb_tgl"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="8"
                                                android:text="Tanggal"
                                                android:textColor="#000"
                                                android:textSize="14dp" />

                                            <TextView
                                                android:id="@+id/lb_titik2b"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="8dp"
                                                android:layout_marginEnd="8dp"
                                                android:layout_weight="1"
                                                android:text=":"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:id="@+id/tv_tgl"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="20"
                                                android:text="-"
                                                android:textColor="#000"
                                                android:textSize="14dp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp">

                                            <TextView
                                                android:id="@+id/lb_jumlah"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="8"
                                                android:text="Jumlah"
                                                android:textColor="@color/ijotuakop1"
                                                android:textSize="14dp" />

                                            <TextView
                                                android:id="@+id/lb_titik2c"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="8dp"
                                                android:layout_marginEnd="8dp"
                                                android:layout_weight="1"
                                                android:gravity="start"
                                                android:text=":"
                                                android:textColor="@color/ijotuakop1"
                                                android:textSize="14dp" />

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="20"
                                                android:gravity="start">

                                                <TextView
                                                    android:id="@+id/lb_rp"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="3"
                                                    android:gravity="start"
                                                    android:text="Rp"
                                                    android:textColor="@color/ijotuakop1"
                                                    android:textSize="14dp" />

                                                <TextView
                                                    android:id="@+id/tv_jumlah"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="11"
                                                    android:gravity="end"
                                                    android:text="-"
                                                    android:textColor="@color/ijotuakop1"
                                                    android:textSize="14dp"
                                                    android:textStyle="bold" />

                                                <LinearLayout
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="4" />

                                            </LinearLayout>

                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/lb_ket"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:text="Keterangan"
                                            android:textColor="#000"
                                            android:textSize="16dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_ket"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:layout_marginBottom="64dp"
                                            android:text="-"
                                            android:textColor="#000"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                     <ImageView
                         android:id="@+id/ll_end"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_marginEnd="8dp"
                         android:layout_marginRight="8dp"
                         android:layout_marginBottom="16dp"
                         android:layout_weight="0.5"
                         android:background="@drawable/bg_repeat"
                         android:orientation="vertical" />


                </LinearLayout>


            </com.usid.mobilebmt.mandirisejahtera.dashboard.riwayat.ZigZag>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_share_riwayat" />

</RelativeLayout>
